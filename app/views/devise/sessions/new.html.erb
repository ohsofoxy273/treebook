
<div class="row">
  <div class = "col-sm-3">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-vertical control-label well"}) do |f| %>
	  
	  <fieldset>
	  	<legend>Sign In</legend>
		  <%= f.input :email %>
		  <%= f.input :password %>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input :remember_me, as: :boolean %> </div>
		  <% end -%>
		  <div><%= f.button :submit, class: "btn-primary"%></div>
	  </fieldset>
	<% end %>
	<%= render "devise/shared/links" %>
  </div>
  <div class="col-sm-6">
  	<h2>Signing in is easy and secure</h2>
  </div>
</div>
